<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyBottomSheet" parent="Widget.MaterialComponents.Chip.Choice">
    </style>
    <style name="MyBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/my_navigation_bar_item_tint</item>
        <item name="itemTextColor">@drawable/my_navigation_bar_item_tint</item>
        <item name="itemRippleColor">@drawable/my_ripple</item>
<!--        TODO HW Примените свою тему для BottomNavigationView.-->
    </style>

    <style name="MyChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
    </style>
    <style name="MyStyleFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">?superColor</item>
    </style>

    <style name="MyStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#034AFF</item>
        <item name="helperTextEnabled">false</item>
        <item name="counterEnabled">false</item>
        <item name="errorTextColor">#034AFF</item>
    </style>

    <style name="MyTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabUnboundedRipple">true</item>
        <item name="tabIndicatorAnimationDuration">500</item>
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/azeret</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>


    <style name="MySmallShape" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">10%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="MyMediumShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">50dp</item>
        <item name="cornerFamily">cut</item>
    </style>
</resources>